{% extends 'base.html.twig' %}

{% block title %}Recette-
	{{ recette.nom }}
{% endblock %}

{% block body %}
	{#{{ dump(recette) }}#}
	<div class="container mx-auto">
		<h2 class="text-5xl text-center mt-10 mb-8">{{ recette.nom }}
		</h2>
		<h4 class="text-xl text-center mt-10 mb-8">Categorie: {{ recette.categorie }}
		</h4>
		{# Affichage des messages flash que vous aviez noté la recette#}
		{% for type, messages in app.flashes %}
			<div class="alert alert-{{ type }}">
				{% for message in messages %}
					<p class="p-4 bg-green-50 text-5ml text-center mt-8 mb-8">
						{{ message }}</p>
				{% endfor %}
			</div>
		{% endfor %}

		<div class="text-center max-w-lg mx-auto relative max-w border border-solid border-gray-200 rounded-2xl transition-all duration-500 ">
			<div class="block overflow-hidden">
				<img src="{{ asset('uploads/recettes/' ~ recette.image) }}" alt="Carte"/>
			</div>
			<div class="p-4">
				<h3 class="text-sm font-semibold text-gray-500 transition-all duration-500 leading-5 mb-5">
					{{recette.portion}}
					portions
				</h3>
				<div class="grid grid-cols-3 gap-4">
					{% for mesure in recette.mesures %}
						<div class="relative w-[130px] h-[130px] object-cover border border-solid border-gray-200 rounded-2xl transition-all duration-500  ">
							<div class="block overflow-hidden">
								{% if mesure.ingredients|length > 0 %}
									<img class="relative w-[60px] h-[60px] object-cover" src="{{ asset('uploads/ingredients/' ~ mesure.ingredients[0].image) }}" alt="ingredient"/>
								{% else %}
									<img src="{{ asset('images/default-image.png') }}" alt="ingredient"/>
								{% endif %}
							</div>
							<div class="p-4">
								{% if mesure.ingredients|length > 0 %}
									<p class="text-base font-semibold text-gray-900 mb-1 capitalize transition-all duration-500 ">{{ mesure.ingredients[0].nom }}</p>
								{% else %}
									<p class="text-base font-semibold text-gray-900 mb-1 capitalize transition-all duration-500 ">Ingrédient inconnu</p>
								{% endif %}
								<p class="text-sm font-normal text-gray-500 transition-all duration-500 leading-5 mb-2">
									{{ mesure.quantite }}
									{{ mesure.mesure }}
								</p>
							</div>
						</div>
					{% endfor %}
				</div>

				<p class="text-sm font-semibold text-gray-500 transition-all duration-500 leading-5 mb-5">
					Le pays d'origine est
					{{recette.pays}}
				</p>
				<p class="text-sm text-justify font-normal text-gray-500 transition-all duration-500 leading-5 mb-5">
					Préparation:
					{{recette.preparation}}
					min;      Repos:
					{{recette.repos}}
					min;     Cuisson:
					{{recette.cuisson}}
					min;
				</p>

				<h5 class="text-5m text-left mt-4 mb-4">Les instructions</h5>

				<p class="text-sm font-normal text-justify text-gray-500 transition-all duration-500 leading-5 mb-5">
					{{recette.instruction}}

				</p>
			</div>
		</div>
	</div>


	<section class="py-24 relative">
		<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
			<div class="grid grid-cols-12">
