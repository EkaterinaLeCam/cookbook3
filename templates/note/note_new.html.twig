{% extends 'base.html.twig' %}

{% block title %}Notez la recette
{% endblock %}

{% block body %}
	<div class="max-w-md mx-auto">
		<h1 class="text-2xl font-semibold text-center">Notez notre recette:
			{{ recette.nom }}</h1>

		<div class="flex items-center justify-between mb-2 gap-3">
			<div class="flex items-center gap-4 lg:gap-2">
				{% for i in 1..5 %}
					<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewbox="0 0 30 30" fill="none">
						<g clip-path="url(#clip0_13857_3287)">
							<path d="M14.1033 2.56698C14.4701 1.82374 15.5299 1.82374 15.8967 2.56699L19.1757 9.21093C19.3214 9.50607 19.6029 9.71064 19.9287 9.75797L27.2607 10.8234C28.0809 10.9426 28.4084 11.9505 27.8149 12.5291L22.5094 17.7007C22.2737 17.9304 22.1662 18.2614 22.2218 18.5858L23.4743 25.8882C23.6144 26.7051 22.7569 27.3281 22.0233 26.9424L15.4653 23.4946C15.174 23.3415 14.826 23.3415 14.5347 23.4946L7.9767 26.9424C7.24307 27.3281 6.38563 26.7051 6.52574 25.8882L7.7782 18.5858C7.83384 18.2614 7.72629 17.9304 7.49061 17.7007L2.1851 12.5291C1.59159 11.9505 1.91909 10.9426 2.73931 10.8234L10.0713 9.75797C10.3971 9.71064 10.6786 9.50607 10.8243 9.21093L14.1033 2.56698Z" fill="#FFC107"/>
						</g>
						<defs>
							<clipPath id="clip0_13857_3287">
								<rect width="30" height="30" fill="white"/>
							</clipPath>
						</defs>
					</svg>
				{% endfor %}
			</div>

			<div class="relative ">
				{{ form_start(formNote) }}
				{{ form_label(formNote.etoile, ) }}
				{{ form_widget(formNote.etoile, {
                        attr: {
                            class: "block w-full px-5 py-2.5 bg-white leading-7 text-base font-normal shadow-xs text-gray-900 bg-transparent border border-gray-300 rounded-xl placeholder-gray-400 focus:outline-none"
                        }
                    }) }}
			</div>
		</div>
		<button type="submit" class="w-52 h-12 bg-indigo-600 hover:bg-indigo-800 transition-all duration-700 rounded-full shadow-xs text-white text-base font-semibold leading-6 mb-6">
			Envoyer
		</button>
		{{ form_end(formNote) }}


	</div>
{% endblock %}
